
; basic villager archetype 
object villager
    attach Collider
        set number width 10
        set number height 5
    attach CharacterMovement
        set number moveSpeed 0.5
        set bool randomDir true
    attach HumanoidRenderer
        set bool randomColor true
    attach SimpleAI
    attach Dialogue

; basic player archetype 
object player
    attach Collider
        set number width 10
        set number height 5
    attach CharacterMovement
        set number moveSpeed 1
        set bool randomDir false
    attach HumanoidRenderer
        set bool randomColor false
    attach InputController
    attach WalkSound
    attach BattleStats
        set bool player true
        set number health 70
        set number maxHealth 80
        set word name You
        set number level 1

; potion archetype
object potion
    attach Collider 
        set number width 8
        set number height 8
    attach PotionRenderer
    attach Potion
        
